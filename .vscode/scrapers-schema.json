{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$ref": "#/definitions/Scrapers",
  "definitions": {
    "Scrapers": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "excludeAirlines": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 2
          },
          "uniqueItems": true
        },
        "airlineGroups": {
          "type": "object",
          "description": "Group name to array of airlines mapping (ex. for use with an airline alliance)",
          "additionalProperties": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 2
            }
          }
        },
        "airlineAmenities": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "airlineCode": {
                "type": "string",
                "description": "Airline IATA code (ex. 'UA')"
              },
              "podsAircraft": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Substrings of aircraft names to assume have lie-flat seats in Business (ex. 'A321')"
              }
            },
            "required": [
              "airlineCode",
              "podsAircraft"
            ],
            "title": "AirlineAmenity"
          }
        },
        "scrapers": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "name": {
                "type": "string",
                "description": "Name of the scraper (ex. 'united')"
              },
              "supportedAirlines": {
                "type": "array",
                "uniqueItems": true,
                "items": {
                  "type": "string",
                  "minLength": 2
                },
                "description": "Codes of the airlines which this scraper searches (ex. 'UA')"
              }
            },
            "required": [
              "name",
              "supportedAirlines"
            ],
            "title": "Scraper"
          }
        }
      },
      "required": [
        "airlineAmenities",
        "scrapers"
      ],
      "title": "Scrapers"
    }
  }
}