{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$ref": "#/definitions/Scrapers",
  "definitions": {
    "Scrapers": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "airlineAmenities": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/AirlineAmenity"
          }
        },
        "scrapers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Scraper"
          }
        }
      },
      "required": [
        "airlineAmenities",
        "scrapers"
      ],
      "title": "Scrapers"
    },
    "AirlineAmenity": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "airlineCode": {
          "type": "string",
          "description": "Airline IATA code (ex. 'UA')"
        },
        "podsAircraft": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Substrings of aircraft names to assume have lie-flat seats in Business (ex. 'A321')"
        }
      },
      "required": [
        "airlineCode",
        "podsAircraft"
      ],
      "title": "AirlineAmenity"
    },
    "Scraper": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the scraper (ex. 'united')"
        },
        "supportedAirlines": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Codes of the airlines which this scraper searches (ex. 'UA')"
        }
      },
      "required": [
        "name",
        "supportedAirlines"
      ],
      "title": "Scraper"
    }
  }
}