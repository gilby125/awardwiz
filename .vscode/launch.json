  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Scraper",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/src/scrapers/debug.ts",
      "preLaunchTask": "tsc: build - src/scrapers/tsconfig.json",
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ],
      "cwd": "${workspaceFolder}/src/scrapers",
      "env": {
        "NODE_PATH": "${workspaceFolder}/node_modules",
      },
      "internalConsoleOptions": "openOnSessionStart",
      "postDebugTask": "Delete scraper dist directory"
    }
  ]
}