{
  "type": "module",
  "scripts": {
    "check": "NODE_NO_WARNINGS=1 npm exec depcheck && echo 'linting' && TIMING=1 npm exec -- eslint --ext .ts --cache . && echo 'ok'",
    "start": "tsc && npm run docker-build && npm run docker-run-local",

    "docker-build": "docker buildx build -t ghcr.io/lg/awardwiz:scrapers ./",
    "docker-run-local": "docker run -it --rm -p 8080:8080 --volume $(pwd)/tmp:/root/tmp $([ -f .env.local ] && echo '--env-file .env.local') ghcr.io/lg/awardwiz:scrapers"
  },
  "devDependencies": {
    "@types/node": "^18.11.17",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "depcheck": "^1.4.3",
    "eslint": "^8.30.0",
    "eslint-plugin-deprecation": "^1.3.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-promise": "^6.1.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@cliqz/adblocker-playwright": "^1.25.1",
    "@redis/client": "^1.4.2",
    "ansi-colors": "^4.1.3",
    "cross-fetch": "^3.1.5",
    "dayjs": "^1.11.7",
    "p-retry": "^5.1.2",
    "playwright": "^1.28.1",
    "playwright-extra": "^4.3.5",
    "puppeteer-extra-plugin-stealth": "^2.11.1"
  }
}
