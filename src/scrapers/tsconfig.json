{
  "include": [
    "*.ts"
  ],
  "exclude": [
    "./node_modules"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",

    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,

    "outDir": "dist",
    "sourceMap": true
  }
}